# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
		# Set the bar ID
		id top_bar
		
		# Move the bar to the top
		position top
		
		# Enable transparency
		i3bar_command i3bar -t
		
		# Remove the workspace numbers that were used to preserve workspace ordering
		strip_workspace_numbers yes
		
		# Disable the system tray
		tray_output none
		
		# Display the binding mode indicator
		binding_mode_indicator yes
		
		# Colors
		colors {
			# Whole color settings
			background	#000000
			statusline	#ffffff
			separator	#666666

			# Type				border	background	text
			focused_workspace	#008fff	#007fff		#ffffff
			active_workspace	#333333	#5f676a		#ffffff
			inactive_workspace	#333333	#222222		#888888
			urgent_workspace	#aa0000	#990000		#ffffff
			binding_mode		#aa0000	#990000		#ffffff
		}
		
		# Font
		# font pango:Source Han Sans,源ノ角ゴシック,Source Han Sans Normal,源ノ角ゴシック Normal Normal Regular 11
		
		
        # status_command i3status -c ~/.i3/i3status.conf
        status_command i3blocks -c ~/.i3/i3blocks_top.conf
        
        # Run Battery Notifier Script
        # status_command ~/.xmonad/battery_notify.sh
}

bar {
		# Set the bar ID
		id bottom_bar
		
		# Move the bar to the bottom
		position bottom
		
		# Enable transparency
		i3bar_command i3bar -t
		
		# Hide the workspace buttons as they are already displayed in the top bar
		workspace_buttons no
		
		# Obey Fitts's law
		# tray_padding 0 px
		
		# Display the binding mode indicator
		binding_mode_indicator yes
		
		# Colors
		colors {
			# Whole color settings
			background	#000000
			statusline	#ffffff
			separator	#666666
			# separator	#f5500f

			# Type				border	background	text
			focused_workspace	#008fff	#007fff		#ffffff
			active_workspace	#333333	#5f676a		#ffffff
			inactive_workspace	#333333	#222222		#888888
			urgent_workspace	#aa0000	#990000		#ffffff
			binding_mode		#aa0000	#990000		#ffffff
		}
		
		# Font
		# font pango:Source Han Sans,源ノ角ゴシック,Source Han Sans Normal,源ノ角ゴシック Normal Normal Regular 11
		
		
        # status_command i3status -c ~/.i3/i3status.conf
        status_command i3blocks -c ~/.i3/i3blocks_bottom.conf
        
        # Run Battery Notifier Script
        # status_command ~/.xmonad/battery_notify.sh
}


