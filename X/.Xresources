
! vim: set filetype=xdefaults :
 
URxvt.perl-ext-common : default,keyboard-select,url-select,clipboard
 
URxvt.keysym.M-x           : perl:keyboard-select:activate
URxvt.keysym.M-u           : perl:url-select:select_next
URxvt.keysym.M-c           : perl:clipboard:copy
URxvt.keysym.M-v           : perl:clipboard:paste
URxvt.keysym.M-s           : perl:keyboard-select:search
URxvt.keysym.M-C-v         : perl:clipboard:paste_escaped
URxvt.keysym.M-Escape      : perl:keyboard-select:activate
URxvt.url-select.launcher  : chromium
URxvt.url-select.autocopy  : true
URxvt.url-select.underline : true
 
URxvt.geometry  : 100x40
 
! URxvt.font        : xft:Inconsolata\ for\ Powerline:pixelsize=13
URxvt.font        : xft:InconsolataForPowerline\ Nerd\ Font:pixelsize=13
! URxvt.font        : xft:Terminess\ Powerline:pixelsize=13
! URxvt.font        : xft:Inconsolata\ for\ Powerline\ Nerd\ Font\ Complete:pixelsize=13
! URxvt.font        : xft:PragmataPro:pixelsize=13
! URxvt.font        : xft:Nerd Font:Regular:pixelsize=8:antialias=true:hinting=true


! https://gist.github.com/meskarune/dc1ce25396b12c0fa7df
! URxvt.font: xft:DejaVu Sans Mono for Powerline Plus Nerd File Types Mono:size=9:antialias=true:hinting=true,\
            xft:Terminess Powerline:antialias=true:hinting=true,\
            xft:Symbola
! URxvt.boldFont: xft:DejaVu Sans Mono for Powerline Plus Nerd File Types Mono:bold:size=9:antialias=true:hinting=true,\
                xft:Terminess Powerline:antialias=true:hinting=true,\
                xft:Symbola
! URxvt.italicFont: xft:DejaVu Sans Mono for Powerline Plus Nerd File Types Mono:oblique:size=9:antialias=true:hinting=true,\
                  xft:Terminess Powerline:antialias=true:hinting=true,\
                  xft:Symbola




! URxvt.font: xft:PragmataPro:size=12,xft:terminesspowerline:size=12
! URxvt.boldFont: xft:PragmataPro:style=Bold:size=12
! URxvt.letterSpace: true

! URxvt*font: xft:Menlo\ for\ Powerline:Regular:pixelsize=12

URxvt.letterSpace : 0
URxvt.termName    : rxvt-256color
URxvt.iso14755    : false
 
URxvt.urgentOnBell: true
 
URxvt.saveLines   : 12000
! URxvt.scrollBar   : false
URxvt.scrollBar   : true
URxvt.scrollstyle : rxvt
 
!XFT
Xft.lcdfilter : lcddefault
Xft.hintstyle : hintslight
Xft.hinting   : true
Xft.antialias : true
Xft.rgba      : rgb
 
!Solarized + tangerine + random colours
URxvt.cursorColor            : #93A1A1
URxvt*cursorBlink            : true
 
URxvt.pointerColorBackground : #586E75
URxvt.urlLuncher             : /usr/bin/luakit
URxvt.pointerColorForeground : #93A1A1
 
# URxvt.Depth : 32	# This was enabled originally but disabled it so that ranger can display images
URxvt.background    : #404040
URxvt.foreground    : #F6F3E8
URxvt*.transparent  : True
URxvt*.shading      : 20

! Fade when out of focus
URxvt*.fading      : 50
 
URxvt.colorBD : #FFFFFF
URxvt.colorUL : #CCCC66
 
